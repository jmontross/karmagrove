  <![endif]-->
  <title>Karmagrove</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <%= tag :meta, :name => "stripe-key", &crarr;
    :content => STRIPE_PUBLIC_KEY %>
</head>
<body>
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="#">Some Store</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li><%= link_to "Browse Products", products_path %></li>
            <li><%= link_to "Price List" %></li>
            <li><%= link_to "Contact Us" %></li>
            <li><%= link_to "Cart" %></li>
          </ul>
        </div>
      </div>
    </div>
    </div>

  <div class="container">
    <div class="row">
      <div class="span9">
        <%= yield %>
      </div>

      <div class="span3">
        <h2> about us </h2>
          We are all about giving back.  Help karma grow and buy some joy coins.  90% of the   profits go to charity.  You decide where 50% of the profits go.
      </div>
    </div>
  </div>
</body>
</html>
