  <div class="login_form">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %>
</div>

<div class="login_link"><%= link_to "Sign in with Facebook", "/auth/facebook/login?donation_id=#{params[:purchase_id]}", id: "sign_in" %></div>

  <div class="password_label"><%= f.label :password %>
  <%= f.password_field :password %></div>


<div class="login_link"><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>

<br />
  <div class="btn-sign-in"> <%= f.submit "Sign in" %> </div>
  <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me, style: "float:left;" %>
      <%= f.label :remember_me, class: "remember_me" %>
  <% end -%>

<% end %>

